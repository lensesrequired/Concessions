<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.coe.asmarek.concessions">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TotalActivity"
            android:label="@string/title_activity_total"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="edu.coe.asmarek.Concessions.TotalActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetItemsActivity"
            android:label="@string/title_activity_set_items"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="edu.coe.asmarek.Concessions.SetItemsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FinalTotalActivity"
            android:label="@string/title_activity_final_total"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="edu.coe.asmarek.Concessions.FinalTotalActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>